---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Heart, Users, GraduationCap, Stethoscope, Home, Droplets } from 'lucide-astro';
---

<Layout title="Donate - AlaoMe" description="Support our mission to transform lives and build stronger communities">
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-primary-600 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-bold text-white mb-4">
        Make a <span class="text-primary-200">Difference</span>
      </h1>
      <p class="text-xl text-primary-100 max-w-3xl mx-auto">
        Your donation directly supports life-changing programs in education, healthcare, and community development.
      </p>
    </div>
  </section>

  <!-- Impact Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Your Impact</h2>
        <p class="text-xl text-gray-600">See how your donation creates real change</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-gray-50 p-6 rounded-xl">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
            <GraduationCap class="w-6 h-6 text-primary-600" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">$50</h3>
          <p class="text-gray-600">Provides school supplies for 5 children for an entire year</p>
        </div>

        <div class="bg-gray-50 p-6 rounded-xl">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
            <Stethoscope class="w-6 h-6 text-primary-600" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">$100</h3>
          <p class="text-gray-600">Funds medical care for 10 patients at our mobile clinics</p>
        </div>

        <div class="bg-gray-50 p-6 rounded-xl">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
            <Droplets class="w-6 h-6 text-primary-600" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">$250</h3>
          <p class="text-gray-600">Provides clean water access for one family for a full year</p>
        </div>

        <div class="bg-gray-50 p-6 rounded-xl">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
            <Users class="w-6 h-6 text-primary-600" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">$500</h3>
          <p class="text-gray-600">Trains one community health worker to serve their village</p>
        </div>

        <div class="bg-gray-50 p-6 rounded-xl">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
            <Home class="w-6 h-6 text-primary-600" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">$1,000</h3>
          <p class="text-gray-600">Builds essential infrastructure for an entire community</p>
        </div>

        <div class="bg-gray-50 p-6 rounded-xl">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
            <Heart class="w-6 h-6 text-primary-600" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Any Amount</h3>
          <p class="text-gray-600">Every donation, no matter the size, makes a meaningful difference</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Donation Form -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-xl shadow-lg p-8">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Make Your Donation</h2>
          <p class="text-gray-600">Choose your donation amount and help transform lives today</p>
        </div>

        <form class="space-y-6">
          <!-- Donation Amount -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-4">Donation Amount</label>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-4">
              <button type="button" class="donation-amount px-4 py-3 border border-gray-300 rounded-lg text-center hover:border-primary-500 hover:bg-primary-50 transition-colors" data-amount="50">
                $50
              </button>
              <button type="button" class="donation-amount px-4 py-3 border border-gray-300 rounded-lg text-center hover:border-primary-500 hover:bg-primary-50 transition-colors" data-amount="100">
                $100
              </button>
              <button type="button" class="donation-amount px-4 py-3 border border-gray-300 rounded-lg text-center hover:border-primary-500 hover:bg-primary-50 transition-colors" data-amount="250">
                $250
              </button>
              <button type="button" class="donation-amount px-4 py-3 border border-gray-300 rounded-lg text-center hover:border-primary-500 hover:bg-primary-50 transition-colors" data-amount="500">
                $500
              </button>
            </div>
            <div class="relative">
              <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">$</span>
              <input
                type="number"
                id="custom-amount"
                placeholder="Enter custom amount"
                class="w-full pl-8 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                min="1"
              />
            </div>
          </div>

          <!-- Donation Type -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-3">Donation Type</label>
            <div class="space-y-2">
              <label class="flex items-center">
                <input type="radio" name="donation-type" value="one-time" checked class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300">
                <span class="ml-2 text-gray-700">One-time donation</span>
              </label>
              <label class="flex items-center">
                <input type="radio" name="donation-type" value="monthly" class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300">
                <span class="ml-2 text-gray-700">Monthly recurring donation</span>
              </label>
            </div>
          </div>

          <!-- Personal Information -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="first-name" class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
              <input
                type="text"
                id="first-name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            <div>
              <label for="last-name" class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
              <input
                type="text"
                id="last-name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
            <input
              type="email"
              id="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
            />
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-primary-600 text-white px-6 py-4 rounded-lg font-medium text-lg hover:bg-primary-500 transition-colors focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
          >
            Donate Now
          </button>

          <p class="text-sm text-gray-500 text-center">
            Your donation is secure and tax-deductible. You will receive a receipt via email.
          </p>
        </form>
      </div>
    </div>
  </section>

  <!-- Trust Indicators -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-8">Trusted by Thousands</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <div class="text-3xl font-bold text-primary-600 mb-2">98%</div>
          <p class="text-gray-600">of donations go directly to programs</p>
        </div>
        <div>
          <div class="text-3xl font-bold text-primary-600 mb-2">5,000+</div>
          <p class="text-gray-600">donors supporting our mission</p>
        </div>
        <div>
          <div class="text-3xl font-bold text-primary-600 mb-2">A+</div>
          <p class="text-gray-600">charity rating and transparency</p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const donationButtons = document.querySelectorAll('.donation-amount');
    const customAmountInput = document.getElementById('custom-amount') as HTMLInputElement;

    donationButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        
        const target = e.currentTarget as HTMLButtonElement;
        
        // Remove active state from all buttons
        donationButtons.forEach(btn => {
          btn.classList.remove('border-primary-500', 'bg-primary-50', 'text-primary-700');
          btn.classList.add('border-gray-300');
        });
        
        // Add active state to clicked button
        target.classList.remove('border-gray-300');
        target.classList.add('border-primary-500', 'bg-primary-50', 'text-primary-700');
        
        // Set the custom amount input
        if (customAmountInput && target.dataset.amount) {
          customAmountInput.value = target.dataset.amount;
        }
      });
    });

    // Clear button selection when custom amount is entered
    if (customAmountInput) {
      customAmountInput.addEventListener('input', () => {
        donationButtons.forEach(btn => {
          btn.classList.remove('border-primary-500', 'bg-primary-50', 'text-primary-700');
          btn.classList.add('border-gray-300');
        });
      });
    }

    // Form submission
    const form = document.querySelector('form');
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        alert('Thank you for your donation! In a real application, this would process the payment.');
      });
    }
  });
</script>