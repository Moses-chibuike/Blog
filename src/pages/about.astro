---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Users, Heart, Target, Award } from 'lucide-astro';
---

<Layout title="About Us - AlaoMe" description="Learn about AlaoMe's mission to transform lives and build stronger communities">
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-primary-600 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-bold text-white mb-4">
        About <span class="text-primary-200">AlaoMe</span>
      </h1>
      <p class="text-xl text-primary-100 max-w-3xl mx-auto">
        We are dedicated to transforming lives and building stronger communities through sustainable development, education, and healthcare initiatives.
      </p>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Mission</h2>
          <p class="text-lg text-gray-600 mb-6">
            AlaoMe Transformation exists to create lasting positive change in underserved communities around the world. We believe that every person deserves access to quality education, healthcare, and opportunities for economic growth.
          </p>
          <p class="text-lg text-gray-600">
            Through our comprehensive programs and partnerships with local communities, we work to address root causes of poverty and inequality, creating sustainable solutions that communities can maintain long after our direct involvement ends.
          </p>
        </div>
        <div class="relative">
          <img 
            src="https://images.pexels.com/photos/6646917/pexels-photo-6646917.jpeg?auto=compress&cs=tinysrgb&w=800&h=600&fit=crop" 
            alt="Community gathering"
            class="rounded-lg shadow-lg"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Values</h2>
        <p class="text-xl text-gray-600">The principles that guide everything we do</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <Heart class="w-8 h-8 text-primary-600" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Compassion</h3>
          <p class="text-gray-600">We approach every situation with empathy and understanding, putting people first in all our decisions.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <Users class="w-8 h-8 text-primary-600" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Community</h3>
          <p class="text-gray-600">We believe in the power of community-driven solutions and work alongside local leaders.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <Target class="w-8 h-8 text-primary-600" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Sustainability</h3>
          <p class="text-gray-600">Our programs are designed to create lasting change that communities can maintain independently.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <Award class="w-8 h-8 text-primary-600" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Excellence</h3>
          <p class="text-gray-600">We strive for the highest standards in all our work, ensuring maximum impact for every dollar donated.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Leadership Team</h2>
        <p class="text-xl text-gray-600">Dedicated professionals committed to making a difference</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <img 
            src="https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg?auto=compress&cs=tinysrgb&w=300&h=300&fit=crop" 
            alt="Sarah Johnson"
            class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
          />
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Sarah Johnson</h3>
          <p class="text-primary-600 mb-2">Executive Director</p>
          <p class="text-gray-600 text-sm">15+ years in international development and community building</p>
        </div>

        <div class="text-center">
          <img 
            src="https://images.pexels.com/photos/3184338/pexels-photo-3184338.jpeg?auto=compress&cs=tinysrgb&w=300&h=300&fit=crop" 
            alt="Dr. Michael Chen"
            class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
          />
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Dr. Michael Chen</h3>
          <p class="text-primary-600 mb-2">Healthcare Director</p>
          <p class="text-gray-600 text-sm">Medical doctor specializing in rural healthcare delivery</p>
        </div>

        <div class="text-center">
          <img 
            src="https://images.pexels.com/photos/3184339/pexels-photo-3184339.jpeg?auto=compress&cs=tinysrgb&w=300&h=300&fit=crop" 
            alt="Emma Rodriguez"
            class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
          />
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Emma Rodriguez</h3>
          <p class="text-primary-600 mb-2">Programs Director</p>
          <p class="text-gray-600 text-sm">Expert in sustainable development and community engagement</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-primary-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Join Our Mission</h2>
      <p class="text-xl text-primary-100 mb-8 max-w-3xl mx-auto">
        Together, we can create lasting change and transform lives in communities around the world.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/donate"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-primary-600 bg-white rounded-lg hover:bg-gray-100 transition-colors"
        >
          Make a Donation
        </a>
        <a 
          href="/volunteer"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white border-2 border-white rounded-lg hover:bg-white hover:text-primary-600 transition-colors"
        >
          Become a Volunteer
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>