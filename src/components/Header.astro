---
import { Menu, X } from 'lucide-astro';
---

<header class="bg-primary-600 shadow-lg sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-white text-2xl font-bold hover:text-primary-100 transition-colors">
          AlaoMe
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="/" class="text-white hover:text-primary-100 px-3 py-2 text-sm font-medium transition-colors">
            Home
          </a>
          <a href="/blog" class="text-white hover:text-primary-100 px-3 py-2 text-sm font-medium transition-colors">
            Blog
          </a>
          <a href="/about" class="text-white hover:text-primary-100 px-3 py-2 text-sm font-medium transition-colors">
            About
          </a>
          <a href="/contact" class="text-white hover:text-primary-100 px-3 py-2 text-sm font-medium transition-colors">
            Contact Us
          </a>
          <a href="/donate" class="bg-primary-500 hover:bg-primary-400 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
            Donate
          </a>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-white hover:text-primary-100 p-2 rounded-md transition-colors"
          aria-label="Toggle mobile menu"
        >
          <Menu id="menu-icon" size={24} />
          <X id="close-icon" size={24} style="display: none;" />
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden bg-primary-700 border-t border-primary-500">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a href="/" class="text-white hover:text-primary-100 block px-3 py-2 text-base font-medium transition-colors">
          Home
        </a>
        <a href="/blog" class="text-white hover:text-primary-100 block px-3 py-2 text-base font-medium transition-colors">
          Blog
        </a>
        <a href="/about" class="text-white hover:text-primary-100 block px-3 py-2 text-base font-medium transition-colors">
          About
        </a>
        <a href="/contact" class="text-white hover:text-primary-100 block px-3 py-2 text-base font-medium transition-colors">
          Contact Us
        </a>
        <a href="/donate" class="bg-primary-500 hover:bg-primary-400 text-white block px-3 py-2 rounded-lg text-base font-medium transition-colors m-2">
          Donate
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');

    if (mobileMenuButton && mobileMenu && menuIcon && closeIcon) {
      mobileMenuButton.addEventListener('click', function() {
        const isOpen = !mobileMenu.classList.contains('hidden');
        
        if (isOpen) {
          mobileMenu.classList.add('hidden');
          menuIcon.style.display = 'block';
          closeIcon.style.display = 'none';
        } else {
          mobileMenu.classList.remove('hidden');
          menuIcon.style.display = 'none';
          closeIcon.style.display = 'block';
        }
      });
    }
  });
</script>
</header>